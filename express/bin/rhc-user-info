#!/usr/bin/env ruby
# print deprecation warning
puts "Warning: This command is deprecated. Please use rhc-domain-info instead."
puts""

args = ""
ARGV.each do|a|
  if a.to_s.strip.length == 0; a = "'#{a}'" end
  args += " #{a}"
end

system("rhc-domain-info #{args} 2>&1")
retcode = $?

exit 1 if retcode != 0

exit 0
